<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demoproviderdept8002.dao.DeptDao">

    <select id="findAll" resultType="com.example.demoapi.entities.Dept">
   select deptno,dname,db_source from dept;
  </select>
    <select id="findById" resultType="com.example.demoapi.entities.Dept">
        select deptno,dname,db_source from dept where deptno=#{deptno};
    </select>
    <insert id="addDept" parameterType="com.example.demoapi.entities.Dept">
   INSERT INTO dept(dname,db_source) VALUES(#{dname},DATABASE());
  </insert>

</mapper>


